@model List<AssignCategoryModel>

@{
    ViewData["Title"] = "AssignCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form action="AssignCategory" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check mt-2">
            <input type="hidden" asp-for="@Model[i].CategoryId" />
            <input type="hidden" asp-for="@Model[i].CategoryName" />

            <input type="checkbox" asp-for="@Model[i].Exits" class="custom-checkbox" />
            <label asp-for="@Model[i].Exits" class="form-check-label">@Model[i].CategoryName</label>
        </div>
    }

    <button type="submit" class="btn btn-primary btn-sm">Tanımla</button>
</form>